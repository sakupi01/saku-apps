{
  "name": "blog",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test:unit": "vitest --config vitest.config.ts",
    "test:update": "vitest --config vitest.config.ts --updateSnapshot",
    "test:watch": "vitest --config vitest.config.ts --watchAll",
    "test:debug": "vitest --config vitest.config.ts --runInBand",
    "test:e2e": "playwright test",
    "bench": "vitest bench",
    "coverage": "vitest run --coverage",
    "check:format": "bunx biome format --changed --write .",
    "check:lint": "bunx biome lint --changed --apply .",
    "check:typecheck": "tsc --noEmit",
    "check:lint-format": "bunx biome check --changed --apply .",
    "check:markuplint": "markuplint \"./app/**/*.{jsx,tsx}\"",
    "check:pa11y": "bunx pa11y-ci --config .pa11yci.json",
    "check:pa11y-result": "bunx pa11y-ci --config .pa11yci.json --json > pa11y-ci-results.json",
    "check": "bun check:typecheck & bunx biome check --apply . --no-errors-on-unmatched & bun check:markuplint",
    "lost-pixel": "LOCAL=true lost-pixel",
    "lost-pixel:update": "LOCAL=true lost-pixel update",
    "setup": "./bin/setup.sh"
  },
  "dependencies": {
    "@mdx-js/loader": "3.0.1",
    "@next/mdx": "14.1.0",
    "@next/third-parties": "14.1.0",
    "@remark-embedder/core": "3.0.2",
    "@remark-embedder/transformer-oembed": "3.0.0",
    "@repo/headings-extractor": "*",
    "@repo/ui": "*",
    "@vercel/speed-insights": "1.0.10",
    "gray-matter": "4.0.3",
    "isomorphic-dompurify": "2.4.0",
    "lucide-react": "0.338.0",
    "next": "14.1.1",
    "open-graph-scraper": "6.4.0",
    "react-loading-skeleton": "3.4.0",
    "rehype-pretty-code": "0.13.0",
    "rehype-slug": "6.0.0",
    "rehype-stringify": "10.0.0",
    "remark": "15.0.1",
    "remark-collapse": "0.1.2",
    "remark-directive": "3.0.0",
    "remark-gfm": "4.0.0",
    "remark-link-card": "1.3.1",
    "remark-rehype": "11.1.0",
    "remark-toc": "9.0.0",
    "rss": "1.2.2",
    "sharp": "0.33.3",
    "shiki": "1.1.7",
    "use-debounce": "10.0.0",
    "@vercel/og": "0.6.2"
  },
  "devDependencies": {
    "@graphql-typed-document-node/core": "^3.2.0",
    "@markuplint/jsx-parser": "^4.1.0",
    "@markuplint/react-spec": "^4.0.1",
    "@next/eslint-plugin-next": "^14.0.4",
    "@playwright/test": "^1.43.1",
    "@repo/tailwind-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@types/rss": "^0.0.32",
    "@vitest/coverage-v8": "^1.5.0",
    "lost-pixel": "^3.16.0",
    "markuplint": "^4.1.0",
    "msw": "^2.2.13",
    "react-icons": "^5.0.1",
    "typescript": "^5.3.3"
  },
  "browser": {
    "fs": false,
    "os": false,
    "path": false
  },
  "volta": {
    "node": "21.7.3"
  }
}
