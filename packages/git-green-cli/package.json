{
  "name": "git-green-cli",
  "version": "1.0.0",
  "description": "CLI to use GitHub Heatmap made with React",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saku-1101/sakupi01.com/tree/main/packages/git-green-cli"
  },
  "module": "src/index.ts",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "git-green": "dist/index.js"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:publish": "tsup",
    "clean": "rimraf dist && rimraf .turbo && rimraf node_modules",
    "check:format": "bunx biome format --changed --write .",
    "check:lint": "bunx biome lint --changed --apply .",
    "check:typecheck": "tsc --noEmit",
    "check:lint-format": "bunx biome check --changed --apply .",
    "check": "bun run check:typecheck & bunx biome check --apply . --no-errors-on-unmatched"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "tsup": "^8.1.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "rimraf": "^5.0.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@inquirer/prompts": "5.0.5",
    "commander": "^12.1.0",
    "ora": "^8.0.1",
    "zod": "^3.23.8"
  }
}
